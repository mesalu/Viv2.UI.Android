<resources>
    <!-- Base application theme. -->
    <style name="Theme.Viv2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorSurface">@color/dt_surface</item>
        <item name="colorPrimaryDark">@color/dt_primaryDark</item>
        <item name="colorPrimary">@color/dt_primary</item>
        <item name="colorSecondary">@color/dt_secondary</item>
        <item name="colorOnSecondary">@color/dt_secondaryText</item>
        <item name="colorOnSurface">@color/dt_secondaryDark</item>
        <item name="colorOnPrimarySurface">@color/dt_secondaryLight</item>
        <item name="colorAccent">@color/dt_secondaryLight</item>
        <item name="colorProfileTint">@color/dt_surface</item>

        <item name="android:textColorPrimary">@color/dt_secondaryLight</item>
        <item name="android:textColor">@color/dt_secondaryLight</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="bottomAppBarStyle">@style/Widget.App.BottomAppBarView</item>

        <!-- Theme attributes for the LED widget -->
        <item name="colorLedFillCold">@color/dt_surface</item>
        <item name="colorLedFillAcceptable">@color/dt_surface</item>
        <item name="colorLedFillHot">@color/dt_surface</item>
        <item name="colorLedStrokeHot">@color/dt_led_hot</item>
        <item name="colorLedStrokeAcceptable">@color/dt_led_acceptable</item>
        <item name="colorLedStrokeCold">@color/dt_led_cold</item>
        <item name="dimenLedStroke">4dp</item>

    </style>

    <style name="Widget.App.BottomAppBarView" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="backgroundTint">@color/lt_primaryDark</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/dt_secondaryLight</item>
    </style>
</resources>
